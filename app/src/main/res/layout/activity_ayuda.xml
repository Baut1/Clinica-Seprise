<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F4FF"
    tools:context=".Ayuda"/>


    <!-- Botón de volver -->
    <ImageButton
    android:id="@+id/btnBack"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:background="?attr/selectableItemBackground"
    android:contentDescription="@string/volver"
    android:src="@drawable/ic_arrow_back"
    android:tint="@color/primary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
    <TextView
    android:id="@+id/txtTituloAyuda"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:fontFamily="@font/raleway_bold"
    android:text="Preguntas frecuentes"
    android:textColor="@color/primary_dark"
    android:textSize="24sp"
    app:layout_constraintStart_toEndOf="@id/btnBack"
    app:layout_constraintTop_toTopOf="parent" />

        <!-- ScrollView para las preguntas frecuentes -->
    <ScrollView
    android:id="@+id/scrollPreguntasFrecuentes"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/txtTituloAyuda"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Contenedor de preguntas frecuentes -->
        <LinearLayout
            android:id="@+id/linearPreguntasFrecuentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Pregunta 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtPregunta1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo solicito un turno para estudios clínicos?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRespuesta1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Puedes solicitar un turno ingresando a la sección de 'Solicitar Turno'..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pregunta 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtPregunta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Puedo cancelar o reprogramar un turno?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRespuesta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sí, puedes gestionar tus turnos en la sección 'Mis Turnos'..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Pregunta 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtPregunta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Qué documentos necesito para el estudio?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRespuesta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Generalmente, se requiere la orden médica y en algunos casos..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Pregunta 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/txtPregunta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Cómo veo los resultados de mis estudios?"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/primary_dark"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtRespuesta2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Los resultados están disponibles en la sección 'Mis Estudios' una..."
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/secondary_text"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>