<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClinicaSeprise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/my_light_primary</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="colorSurface">@color/my_light_background</item>

    </style>

    <style name="Theme.ClinicaSeprise" parent="Base.Theme.ClinicaSeprise" />

    <style name="Widget.MyApp.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/my_light_primary</item>
        <item name="borderWidth">2dp</item> <!-- Ancho del borde -->
        <item name="android:textColor">@color/my_light_primary</item> <!-- Color del texto -->
    </style>

    <style name="Theme.ClinicaSeprise.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ClinicaSeprise.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ClinicaSeprise.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>